<div class="offline-warning">
    <div class="offline-warning__content">
        <img src="/img/LogoMain.svg" alt="Логотип" class="offline-warning__logo" />
        <h2 class="offline-warning__title">{{title}}</h2>
        <p class="offline-warning__message">{{message}}</p>

        <div class="offline-warning__actions">
            <button class="offline-warning__btn offline-warning__btn--primary" data-action="reload">
                Обновить
            </button>
            <button class="offline-warning__btn offline-warning__btn--secondary" data-action="back">
                Назад
            </button>
        </div>
    </div>
</div>