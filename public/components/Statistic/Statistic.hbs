<div class="statistics-page">
    <div class="statistics-container">
        <div class="statistics-header">
            <h1 class="statistics-title">Статистика обращений</h1>
        </div>

        <div class="statistics-content">

            <div class="statistics-section">
                <h2 class="statistics-section-title">Общее количество</h2>
                <div class="statistics-value">{{total}}</div>
            </div>

            <div class="statistics-section">
                <h2 class="statistics-section-title">По категориям</h2>
                <table class="statistics-table">
                    <thead>
                        <tr>
                            <th>Категория</th>
                            <th>Количество</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each byCategory}}
                            <tr>
                                <td>{{label}}</td>
                                <td>{{value}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <div class="statistics-section">
                <h2 class="statistics-section-title">По статусам</h2>
                <table class="statistics-table">
                    <thead>
                        <tr>
                            <th>Статус</th>
                            <th>Количество</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each byStatus}}
                            <tr>
                                <td>{{label}}</td>
                                <td>{{value}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            {{! НОВАЯ СЕКЦИЯ: СПИСОК ОБРАЩЕНИЙ }}
            <div class="statistics-section">
                <h2 class="statistics-section-title">Все обращения</h2>
                {{#if supportRequests}}
                    <table class="statistics-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Пользователь</th>
                                <th>Категория</th>
                                <th>Статус</th>
                                <th>Тема</th>
                                <th>Дата</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each supportRequests}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{authorName}}</td>
                                <td>{{categoryLabel}}</td>
                                <td>{{statusLabel}}</td>
                                <td>{{title}}</td>
                                <td>{{createdAtFormatted}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                {{else}}
                    <div class="statistics-no-data">Нет данных об обращениях</div>
                {{/if}}
            </div>

        </div>
    </div>
</div>