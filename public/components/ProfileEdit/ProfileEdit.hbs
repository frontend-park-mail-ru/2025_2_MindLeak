<div class="edit-profile-modal">
    <div class="edit-profile-modal__content">
        <h2>Изменение данных</h2>
        <form class="edit-profile-form">
            <div class="form-group">
                <label for="name">Имя пользователя *</label>
                {{> input type="text" value=settings.name name="name" placeholder="Введите имя"}}
            </div>

            <div class="form-group">
                <label for="phone">Телефон</label>
                {{> input type="tel" value=settings.phone name="phone" placeholder="+7 (XXX) XXX-XX-XX"}}
            </div>
            
            <div class="form-group">
                <label for="password">Пароль</label>
                {{> input type="password" name="password" placeholder="Введите новый пароль"}}
                <small class="form-hint">Оставьте пустым, если не хотите менять пароль</small>
            </div>

            <div class="form-group">
                <label for="country">Страна</label>
                {{> input type="text" value=settings.country name="country" placeholder="Страна"}}
            </div>

            <div class="form-group">
                <label for="language">Язык</label>
                <select name="language" class="form__input">
                    <option value="Русский" {{#if (eq settings.language "Русский")}}selected{{/if}}>Русский</option>
                    <option value="English" {{#if (eq settings.language "English")}}selected{{/if}}>English</option>
                </select>
            </div>

            <div class="form-group">
                <label for="sex">Пол</label>
                <select name="sex" class="form__input">
                    <option value="male" {{#if (eq settings.sex "male")}}selected{{/if}}>Мужской</option>
                    <option value="female" {{#if (eq settings.sex "female")}}selected{{/if}}>Женский</option>
                    <option value="other" {{#if (eq settings.sex "other")}}selected{{/if}}>Другой</option>
                </select>
            </div>

            <div class="form-group">
                <label for="date_of_birth">Дата рождения</label>
                {{> input type="date" value=settings.date_of_birth name="date_of_birth"}}
            </div>

            {{#if error}}
                <div class="global-error">{{error}}</div>
            {{/if}}

            <div class="button-container">
                {{> button text="Сохранить" type="submit" disabled=isLoading}}
                {{> button text="Отмена" type="button" variant="secondary"}}
            </div>
        </form>
    </div>
</div>